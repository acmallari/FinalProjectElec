<style>

    body {
        font-family: 'Poppins', sans-serif;
        background-color: #FFF6DD;
        min-height: 100vh;
        margin: 0;
    }

    h2 {
        background: linear-gradient(120deg, #1c1c1c 30%, #595959 88%);
        color: white;
        padding: 1rem;
        text-align: center;
        border: 5px solid #e6af5d;
        border-radius: 1rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 1.5rem;
        margin-top: 5rem
    }

    .white {
        background-color: white;
        opacity: 1;
        margin-top: -4em;
        padding: 2em 3em;
        border-radius: 1rem;
    }
    
    .main-container{
        height:100vh;
        display:flex;
        align-items:center;
        justify-content:center;
        flex-direction:column;
    }

    .radiobtns {
        width: 100% !important;
        margin: 0 auto !important;
        text-align: center !important;
    }
        [type="radio"]:not(:checked) + span:before, [type="radio"]:not(:checked) + span:after {
        display: none;
        }
    [type="radio"]:checked + span:after {
    display:none;
    }
    .radio-btn {
        margin: 10px !important;
        width: 180px !important;
        height: 200px !important;
        border: 3px solid transparent !important;
        display: inline-block !important;
        border-radius: 10px !important;
        position: relative !important;
        text-align: center !important;
        box-shadow: 0 0 20px #c3c3c367 !important;
        cursor: pointer !important;
        transition: border 0.3s ease;
        background: linear-gradient(180deg, #f4d16e, #e6af5d);
    }

        .radio-btn > i {
            color: white;
            background-color: black;
            font-size: 20px;
            position: absolute;
            top: -15px;
            left: 50%;
            transform: translateX(-50%) scale(4);
            border-radius: 50%;
            padding: 3px;
            width: 30px; /* Explicit width */
            height: 30px;
            transition: 0.2s;
            pointer-events: none;
            opacity: 0;
        }

        .radio-btn .img-icon {
            width: 80px;
            height: 80px;
            position: absolute;
            top: 55%;
            left: 50%;
            transform: translate(-50%, -50%);
            display: flex;
            flex-direction: column; /* Stack the image and text */
            align-items: center;
            justify-content: center;
        }

        .radio-btn .img-icon img {
            line-height: 80px;
            width:125px;
            height:125px;
            border-radius:50%;
        }

        .radio-btn .img-icon h3 {
            color: black;
            font-family: 'Poppins', sans-serif;
            font-size:16px;
            left:10%;
            font-weight:400;
            text-align:center;
        }

        .custom-radio input:checked + .radio-btn {
            border: 3px solid black !important;
        }

        .custom-radio input:checked + .radio-btn > i {
            opacity: 1;
            transform: translateX(-50%) scale(1);
        }
</style>
