            <label class="custom-radio" ng-repeat="candidatesData in candidateData | filter: { pos_id: positionsData.position_id } | orderBy: 'c_partyid'">
                <input type="radio" name="{{positionsData.position_name}}_rad" value="" style="display:none !important;" />
                <span class="radio-btn">
                    <i class="bi bi-check2"></i>
                    <div class="img-icon">
                        @*<img src="~/Content/Images/aiah.jpg" alt="Alternate Text" />*@
                        <h3>{{candidatesData.c_fname + " " + candidatesData.c_lname}}</h3>
                    </div>
                </span>
            </label>

        </div>
    </div>
    <div class="btn-container">
        <a class="btn white-text" href="LoginAdmin">Submit</a>
    </div>
