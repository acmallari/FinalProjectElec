<style>

    .button {
        margin-top: 90%;
        outline: 0;
        grid-gap: 8px;
        align-items: center;
        background-color: #FFEE8C;
        border: 1px solid #000;
        border-radius: 4px;
        cursor: pointer;
        display: inline-flex;
        flex-shrink: 0;
        font-size: 55px;
        gap: 8px;
        justify-content: center;
        line-height: 1.5;
        overflow: hidden;
        padding: 16px 24px;
        text-decoration: none;
        text-overflow: ellipsis;
        transition: all .14s ease-out;
        white-space: nowrap;
        color:#000;
    }
    .button:hover {
        box-shadow: 4px 4px 0 #000;
        transform: translate(-4px,-4px);
    }

    .button:focus-visible {
        outline-offset: 1px;
    }

    .banner-container {
        position: relative;
        width: 100%;
        max-height: 50vh;
        overflow: hidden;
    }

        .banner-container img {
            width: 100%;
            height: auto;
            display: block;
        }

    .banner-text {
        position: absolute;
        top: 30%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        font-family: 'Bebas Neue', sans-serif;
        font-size: 3rem;
        background: rgba(0, 0, 0, 0.5); /* Semi-transparent background */
        padding: 10px 20px;
        border-radius: 5px;
        text-align: center;
    }
                
</style>
